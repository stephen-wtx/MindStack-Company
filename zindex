  <script>
    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile menu toggle + animated hamburger
    const hamb = document.getElementById('hamb');
    const mobileMenu = document.getElementById('mobileMenu');
    let menuOpen = false;
    hamb.addEventListener('click', () => {
      menuOpen = !menuOpen;
      hamb.classList.toggle('open', menuOpen);
      hamb.setAttribute('aria-expanded', String(menuOpen));
      // animate menu open/close
      if(menuOpen){
        mobileMenu.style.transform = 'scaleY(1)';
        mobileMenu.style.opacity = '1';
        mobileMenu.style.transformOrigin = 'top';
      } else {
        mobileMenu.style.transform = 'scaleY(0)';
        mobileMenu.style.opacity = '0';
      }
    });

    // GSAP entrance for hero & reveal on scroll
    document.addEventListener('DOMContentLoaded', () => {
      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if(!prefersReduced && typeof gsap !== 'undefined'){
        gsap.from('#heroHeading', { y: 30, opacity: 0, duration: 0.9, ease: 'power3.out' });
        gsap.from('header a, header nav, header .hamburger', { y: -10, opacity: 0, duration: 0.6, stagger: 0.08, delay: 0.1 });
      } else {
        // fallback: ensure visible
        document.getElementById('heroHeading').style.opacity = 1;
      }

      // Intersection reveal
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if(entry.isIntersecting){
            entry.target.classList.add('revealed');
            if(!prefersReduced && typeof gsap !== 'undefined'){
              gsap.fromTo(entry.target, {y: 18, opacity: 0}, {y:0, opacity:1, duration: 0.7, ease:'power2.out'});
            } else {
              entry.target.style.opacity = 1;
            }
            observer.unobserve(entry.target);
          }
        });
      }, {threshold: 0.12});

      document.querySelectorAll('[data-animate]').forEach(el => {
        el.style.opacity = 0;
        observer.observe(el);
      });
    });

    // Small tilt effect for cards (lightweight)
    document.querySelectorAll('[data-tilt]').forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = (e.clientX - rect.left) / rect.width;
        const y = (e.clientY - rect.top) / rect.height;
        const rx = (y - 0.5) * 8; // tilt range
        const ry = (x - 0.5) * -8;
        card.style.transform = `perspective(900px) rotateX(${rx}deg) rotateY(${ry}deg) scale(1.02)`;
      });
      card.addEventListener('mouseleave', () => {
        card.style.transform = '';
      });
    });

    // Optional: subtle animation of the SVG blobs using GSAP if available
    if(typeof gsap !== 'undefined'){
      const b1 = document.querySelector('#b1');
      const b2 = document.querySelector('#b2');
      if(b1) gsap.to(b1, { attr: { d: [
        "M120 -90 C220 -120 340 -50 360 40 C380 130 270 220 160 220 C50 220 -20 110 0 10 C20 -90 20 -60 120 -90Z",
        "M140 -80 C260 -140 370 -40 360 50 C350 160 260 210 150 200 C40 190 -10 110 10 0 C30 -110 20 -60 140 -80Z"
      ] }, duration:10, repeat:-1, yoyo:true, ease:'sine.inOut' });

      if(b2) gsap.to(b2, { attr: { d: [
        "M60 -60 C150 -90 240 -40 250 40 C260 120 170 200 80 190 C-10 180 -20 120 -10 30 C0 -60 0 -40 60 -60Z",
        "M80 -50 C170 -100 250 -30 240 50 C230 140 150 210 70 200 C-10 190 -30 120 -10 20 C10 -80 20 -40 80 -50Z"
      ] }, duration:12, repeat:-1, yoyo:true, ease:'sine.inOut' });
    }

  </script>
</body>
