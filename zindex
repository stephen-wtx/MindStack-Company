      background: linear-gradient(135deg, rgba(255,255,255,0.03), rgba(255,255,255,0.015));
      border: 1px solid rgba(255,255,255,0.06);
      backdrop-filter: blur(6px) saturate(120%);
    }

    /* Hamburger button */
    .hamburger {
      width:44px; height:44px; display:inline-grid; place-items:center;
      border-radius:10px; transition:transform .25s ease;
    }
    .hamburger:focus { outline: 2px solid rgba(124,92,255,0.35); outline-offset:4px; }
    .hamburger .bar {
      width:20px; height:2px; background:linear-gradient(90deg,var(--accent-1),var(--accent-2));
      display:block; position:relative; border-radius:2px; transition:all .35s ease;
    }
    /* three bars using pseudo elements */
    .hamburger .bar::before, .hamburger .bar::after {
      content:""; position:absolute; left:0; right:0; height:2px; background:inherit; border-radius:2px; transition:all .35s ease;
    }
    .hamburger .bar::before { top:-7px; }
    .hamburger .bar::after { top:7px; }

    /* open state -> X */
    .hamburger.open .bar { background:transparent; }
    .hamburger.open .bar::before { transform: translateY(7px) rotate(45deg); top:0; }
    .hamburger.open .bar::after  { transform: translateY(-7px) rotate(-45deg); top:0; }

    /* subtle floating */
    .floaty { transform-origin:center; animation:floaty 8s ease-in-out infinite; }
    @keyframes floaty {
      0%{transform: translateY(0px) scale(1);}
      50%{transform: translateY(-10px) scale(1.02);}
      100%{transform: translateY(0px) scale(1);}
    }

    /* reduced motion respect */
    @media (prefers-reduced-motion: reduce) {
      .floaty, [data-animate] { animation: none !important; transition: none !important; }
    }

    /* small utility */
    .frost-border {
      box-shadow: 0 6px 30px rgba(2,6,23,0.6), inset 0 1px 0 rgba(255,255,255,0.02);
      border-radius: 14px;
    }
  </style>
